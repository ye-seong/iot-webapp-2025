@{
    // C# 코드 - 스파게티 코드
    ViewData["Title"] = "Contact";
}

<!-- Page content -->
<div id="section" class="py-5">
    <div class="container px-5">
        <!-- Contact Form -->
        <div class="bg-light rounded-3 py-5 px-4 px-md-5 mb-5">
            <!-- Contact Title -->
            <div class="text-center mb-5">
                <div class="feature bg-primary bg-gradient text-white rounded-3 mb-3">
                    <i class="bi bi-envelope"></i>
                </div>
                <h1 class="fw-bolder">Get in touch</h1>
                <p class="lead fw-normal text-muted mb-0">We'd love to hear from you</p>
            </div>
            <!-- Contact Area -->
            <div class="row gx-5 justify-content-center">
                <div class="col-lg-8 col-xl-6">
                    <form id="contactForm" class="needs-validation" validate>
                        <!-- Name입력 -->
                        <div class="form-floating mb-3">
                            <input id="name" type="text" class="form-control" placeholder="Enter your name..." required>
                            <label for="name">Enter your name...</label>
                            <div class="invalid-feedback">A name is required.</div>
                        </div>
                        <!-- Email입력-->
                        <div class="form-floating mb-3">
                            <input id="email" type="email" class="form-control" placeholder="name@example.com" required>
                            <label for="email">Enter your email address</label>
                        </div>
                        <!-- 전화번호 -->
                        <div class="form-floating mb-3">
                            <input id="phone" type="tel" class="form-control" placeholder="(123) 46-7890" required>
                            <label for="phone">Enter your phone number</label>
                        </div>

                        <!-- 메시지 영역-->
                        <div class="form-floating mb-3">
                            <textarea id="message" type="text" class="form-control" style="height: 10rem;" required></textarea>
                            <label for="message">Enter your message</label>
                        </div>

                        <div class="d-grid">
                            <button class="btn btn-primary btn-lg" id="btnSumbit" type="submit">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <!-- Contact cards -->
        <div class="row gx-5 row-cols-2 row-cols-lg-4 py-5">
            <div class="col">
                <div class="feature bg-success bg-gradient text-white rounded-3 mb-3">
                    <i class="bi bi-chat-dots"></i>
                </div>
                <div class="h5 mb-3">Chat with us</div>
                <p class="text-muted mb-0">Chat live with one of our support specialists.</p>
            </div>
            <div class="col">
                <div class="feature bg-success bg-gradient text-white rounded-3 mb-3">
                    <i class="bi bi-people"></i>
                </div>
                <div class="h5 mb-3">Ast the community</div>
                <p class="text-muted mb-0">Lorem ipsum dolor, sit amet consectetur adipisicing</p>
            </div>
            <div class="col">
                <div class="feature bg-success bg-gradient text-white rounded-3 mb-3">
                    <i class="bi bi-question-circle"></i>
                </div>
                <div class="h5 mb-3">Support center</div>
                <p class="text-muted mb-0">Lorem ipsum, dolor sit amet consectetur adipisicing.</p>
            </div>
            <div class="col">
                <div class="feature bg-success bg-gradient text-white rounded-3 mb-3">
                    <i class="bi bi-telephone"></i>
                </div>
                <div class="h5 mb-3">Call us</div>
                <p class="text-muted mb-0">Lorem ipsum dolor sit amet consectetur.</p>
            </div>
        </div>
    </div>
</div>