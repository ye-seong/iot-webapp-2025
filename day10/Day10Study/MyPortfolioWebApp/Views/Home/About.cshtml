@model MyPortfolioWebApp.Models.AboutModel

@{
    ViewData["Title"] = "About";

    var colNum = ViewBag.ColNum; // skill에 쓸 로우에 들어갈 스킬갯수
    var maxNum = ViewBag.SkillCount; // skill에 전체 크기
}

<!-- About Section -->
<section id="about" class="about section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>자기소개</h2>
        <p>@Model.About.Summary</p>
    </div><!-- End Section Title -->

    <div class="container" data-aos="fade-up" data-aos-delay="100">

        <div class="row gy-4 justify-content-center">
            <div class="col-lg-4">
                <img src="@Model.About.PhotoUrl" class="img-fluid" alt="">
            </div>
            <div class="col-lg-8 content">
                <h2>@Model.About.Title</h2>
                <p class="fst-italic py-3">                    
                </p>
                <div class="row">
                    <div class="col-lg-6">
                        <ul>
                            <li><i class="bi bi-chevron-right"></i> <strong>생일:</strong> <span>@Model.About.BirthDate.ToString("yyyy년 MM월 dd일")</span></li>
                            <li><i class="bi bi-chevron-right"></i> <strong>웹사이트:</strong> <span>@Model.About.WebSite</span></li>
                            <li><i class="bi bi-chevron-right"></i> <strong>모바일:</strong> <span>@Model.About.Mobile</span></li>
                            <li><i class="bi bi-chevron-right"></i> <strong>도시:</strong> <span>@Model.About.Address</span></li>
                        </ul>
                    </div>
                    @{
                        // 만 나이 계산
                        var birth = Model.About.BirthDate;
                        var now = DateTime.Now;
                        var age = now.Year - birth.Year;
                        if (birth.Date > now.AddYears(-age))
                        {
                            age--;
                        }
                    }
                    <div class="col-lg-6">
                        <ul>
                            <li><i class="bi bi-chevron-right"></i> <strong>나이:</strong> <span>@age 세</span></li>
                            <li><i class="bi bi-chevron-right"></i> <strong>학력:</strong> <span>@Model.About.Education</span></li>
                            <li><i class="bi bi-chevron-right"></i> <strong>이메일:</strong> <span>@Model.About.Email</span></li>
                            <li><i class="bi bi-chevron-right"></i> <strong>직군:</strong> <span>@Model.About.Job</span></li>
                        </ul>
                    </div>
                </div>
                <p class="py-3">
                    @Model.About.Introduction
                </p>
            </div>
        </div>

    </div>

</section><!-- /About Section -->
<!-- Skills Section -->
<section id="skills" class="skills section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>프로그래밍 스킬</h2>
        @* <p>웹을 기반으로 여러분야를 다룰 수 있습니다</p> *@
        <p>@Model.Skill.Count() 개의 프로그래밍 언어를 다룰 수 있습니다</p>
    </div><!-- End Section Title -->

    <div class="container" data-aos="fade-up" data-aos-delay="100">

        <div class="row skills-content skills-animation">

            <div class="col-lg-6">
                @{
                    // Model.Skill 객체가 Dynamic타입이라서 List로 형변환
                    var skills = Model.Skill.ToList(); 
                }

                @for (var i = 0; i < colNum; i++)
                {
                    <div class="progress">
                        <span class="skill"><span>@skills[i].Langauge</span> <i class="val">@skills[i].Level %</i></span>
                        <div class="progress-bar-wrap">
                            <div class="progress-bar" role="progressbar" aria-valuenow="@skills[i].Level" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                }

            </div>

            <div class="col-lg-6">
                @for (var i = colNum; i < maxNum; i++)
                {
                    <div class="progress">
                        <span class="skill"><span>@skills[i].Langauge</span> <i class="val">@skills[i].Level %</i></span>
                        <div class="progress-bar-wrap">
                            <div class="progress-bar" role="progressbar" aria-valuenow="@skills[i].Level" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                }
            </div>
        </div>

    </div>

</section><!-- /Skills Section -->
<!-- Stats Section -->
