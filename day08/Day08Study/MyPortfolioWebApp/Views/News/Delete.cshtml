@using Westwind.AspNetCore.Markdown
@model MyPortfolioWebApp.Models.News

@{
    ViewData["Title"] = "Delete";
}

<section id="news" class="section">
    <div class="container section-title" data-aos="fade-up">
        <h2>News</h2>
        <p>Lorem ipsum dalat sit amet.</p>
    </div>

    <div class="container" data-aos="fade-up" data-aos-delay="100">        
        <div>
            <h4>News</h4>
            <h4>Are you sure you want to delete this?</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Writer)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Writer)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Title)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Title)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd class="col-sm-10">
                    @* @Html.DisplayFor(model => model.Description) *@
                    @Markdown.ParseHtmlString(Model.Description)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.PostDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PostDate)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ReadCount)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ReadCount)
                </dd>
            </dl>

            <form asp-controller="News" asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-sm btn-danger" />
                <a asp-action="Index" class="btn btn-sm btn-success">List</a>
            </form>
        </div>

    </div>
</section>

